{
  "compilerOptions": {  
    "target": "es5", 
    "module": "es6",
    "lib": [                                 
      "esnext",
      "dom"
    ],
    "jsx": "react",                    
    "declaration": true,                
    "sourceMap": true,                        
    "outDir": "./public",                      
    "strict": true,                           
    "noImplicitAny": false,
    "moduleResolution": "node",               
    "typeRoots": [                            
      "node_modules/@types",
    ],
    "esModuleInterop": true,       
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true           
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src", "jest.tsconfig.json"
  ]
}
